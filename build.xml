<project name="Sportify" default="run">
    <!--Sourcedirection-->
    <property name="src.dir" location="src"/>
    <!--Location where all files are generated to-->
    <property name="build.dir" location="build" />
    <!--Destination where the .class files are generated to-->
    <property name="buildclassses.dir" location="build/classes"/>
    <!--Where the Jar File is generated to. Needed to create the package-->
    <property name="buildjar.dir" location="build/jar"/>
    <!--Path + Name of the generated jar file-->
    <property name="jarname" location="build/jar/HelloWorld.jar"/>
    <!--Path to the test files-->
    <property name="test.dir" location="test" />
    <!--Mainclass-->
    <property name="mainclass" value="HelloWorld"/>
    <!--test-->
    <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
    <path id="jdk.classpath.1.8">
        <fileset dir="${jdk.home.1.8}">
            <include name="jre/lib/charsets.jar"/>
            <include name="jre/lib/deploy.jar"/>
            <include name="jre/lib/javaws.jar"/>
            <include name="jre/lib/jce.jar"/>
            <include name="jre/lib/jfr.jar"/>
            <include name="jre/lib/jfxswt.jar"/>
            <include name="jre/lib/jsse.jar"/>
            <include name="jre/lib/management-agent.jar"/>
            <include name="jre/lib/plugin.jar"/>
            <include name="jre/lib/resources.jar"/>
            <include name="jre/lib/rt.jar"/>
            <include name="jre/lib/ext/access-bridge-64.jar"/>
            <include name="jre/lib/ext/cldrdata.jar"/>
            <include name="jre/lib/ext/dnsns.jar"/>
            <include name="jre/lib/ext/jaccess.jar"/>
            <include name="jre/lib/ext/jfxrt.jar"/>
            <include name="jre/lib/ext/localedata.jar"/>
            <include name="jre/lib/ext/nashorn.jar"/>
            <include name="jre/lib/ext/sunec.jar"/>
            <include name="jre/lib/ext/sunjce_provider.jar"/>
            <include name="jre/lib/ext/sunmscapi.jar"/>
            <include name="jre/lib/ext/sunpkcs11.jar"/>
            <include name="jre/lib/ext/zipfs.jar"/>
        </fileset>
    </path>
    <!--Clean the build directory before building it-->
    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>
    <!--Compile the project-->
    <target name="compile" depends="clean">
        <mkdir dir="${buildclassses.dir}"/>
        <javac srcdir="${src.dir}" destdir="${buildclassses.dir}"/>
    </target>

    <target name="compiletest">
        <mkdir dir="build/test"/>
        <javac srcdir="test"  destdir="build/test"/>
    </target>

    <target name="test" depends="compiletest">
        <junit printsummary="yes" haltonfailure="no" fork="no">
            <formatter type="plain"  ></formatter>
            <classpath>
                <pathelement path="./lib/junit-4.12.jar"/>
                <pathelement path="./lib/hamcrest-core-1.3.jar"/>
                <pathelement path="build/test"/>
            </classpath>
            <batchtest fork="yes">
                <fileset dir="build/test">
                    <include name="**/*Test*" />
                </fileset>
            </batchtest>
        </junit>
    </target>
    <!--Pack it into a JAR-->
    <target name="jar" depends="compile">
        <mkdir dir="${buildjar.dir}"/>
        <jar destfile="${jarname}" basedir="${buildclassses.dir}">
            <manifest>
                <attribute name="Main-Class" value="${mainclass}"/>
            </manifest>
        </jar>
    </target>
    <!--Run the Jar-->
    <target name="run" depends ="jar">
        <java jar="${jarname}" fork="true"/>
    </target>
    <!--Run All Tests-->
    <target name="runtest" depends="test">
    </target>
</project>